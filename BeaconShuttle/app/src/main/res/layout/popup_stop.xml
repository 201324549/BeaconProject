<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stoplayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    android:fontFamily="@font/fontcustom">


    <TextView
        android:id="@+id/rottitle"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="24.32dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="#111111"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stoptitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="24.32dp"
        android:layout_marginTop="73dp"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stopimg"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bus" />

    <TextView
        android:id="@+id/closestop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="닫기"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopimg"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>