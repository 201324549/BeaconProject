<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity"
    >


    <TextView
        android:id="@+id/textlogin"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_gravity="left"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="74dp"
        android:textSize="32dp"
        android:fontFamily="@font/fontcustom"
        android:text="@string/logintext"
        android:textStyle="bold"
        android:textColor="#111111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="40dp"
        android:layout_height="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/fontcustom"
        android:text="@string/grouptext"
        android:textColor="#333333"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/loginId"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:textColor="#111111"
        android:layout_marginTop="264dp"
        android:fontFamily="@font/fontcustom"
        android:hint="(아이디)사번"
        android:inputType="numberDecimal"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="345dp"
        android:hint="비밀번호"
        android:fontFamily="@font/fontcustom"
        android:textColor="#111111"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="234dp"
        android:text="@string/empid"
        android:textColor="#333333"
        android:fontFamily="@font/fontcustom"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="315dp"
        android:text="@string/password"
        android:textColor="#333333"
        android:textSize="13dp"
        android:fontFamily="@font/fontcustom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="312dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="448dp"
        android:onClick="loginClick"
        android:text="로그인"
        android:fontFamily="@font/fontcustom"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_color_drawable"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/saveId"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="392dp"
        android:text="아이디 저장"
        android:fontFamily="@font/fontcustom"
        android:textSize="13dp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/autoLogin"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:fontFamily="@font/fontcustom"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="392dp"
        android:text="자동 로그인"
        android:textColor="#999999"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/comGroupSpinner"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="17dp"
        android:dropDownVerticalOffset= "90dp"
        android:dropDownWidth="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
